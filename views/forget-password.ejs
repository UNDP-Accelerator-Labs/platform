<!DOCTYPE html>

<%
	// CREATE ALIASES
	const language = locals?.metadata?.page?.language
	const origin_url = locals?.origin_url
%>

<head>

<%- include ('partials/head.ejs') %>

</head>


<body>

<%- include ('partials/navigate/menu-languages.ejs') %>

<div class='screen <% if (locals.errormessage) { %>error<% } else { %>blue<% } %>'>
	<div class='modal login-module'>
		<form action='/forget-password?path=<%= locals.redirectPath %>' method='POST'>
			<input type='hidden' name='originalUrl' value='<%- locals.originalUrl %>'>
			<ul>
				<% if (locals.errormessage) { %>
					<li>
						<p class='errormessage'><%- locals.errormessage %></p>
					</li>
				<% } %>

				<li>
					<div class='required'>
						<label class='active'>*</label>
					</div>
					<div class='input-group'>
						<input type='text' id='email' name='email' required>
						<label for='email'>Email</label>
						<!-- TO DO: TRANSLATE -->
					</div>
				</li>
				<li>
					<button type='submit'> Reset password </button>
				</li>
			</ul>
		</form>


		<div class='foot'>
			<hr/>
			<p> Already a registed user? <a href="/login?path=<%= locals.redirectPath %><% if(origin_url){ %>&origin=<%= origin_url %><% } %>"> Log in </a></p>
			<!-- TO DO: TRANSLATE -->
		</div>

	</div>
</div>

<div class='main-content'>
<header>
	<div class='inner'>
		<%- include ('partials/navigate/sidebar.ejs') %>
	</div>
</header>
<div class='browse'></div>
<div class='sidebar lg xl xxl'></div>
</div>

<footer></footer>
<%- include ('./partials/footer.ejs') %>

</main>

</body>
</html>
